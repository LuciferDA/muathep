<div id="search">
  <input type="text" name="search" value="{{ search }}" placeholder="{{ text_search }}" class="" />
  <span>
    <button id="button-search" type="button" ><i class="fa fa-search"></i></button>
  </span>
</div>
<script type="text/javascript">
jQuery('#button-search').bind('click', function() {
	url = 'index.php?route=product/search';

	var search = jQuery('input[name=\'search\']').prop('value');

	if (search) {
		url += '&search=' + encodeURIComponent(search);
	}

	location = url;
});
jQuery('#search input[name=\'search\']').bind('keydown', function(e) {
	if (e.keyCode == 13) {
		jQuery('#button-search').trigger('click');
	}
});
</script>